
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";

    @model examen1ds31_RH.Models.Productos

    if (ViewBag.ins == "true")
    {
        <script>>alert('Productos:'+ @ViewBag.user + 'guardado!!')</script>
    }

}

<h2>Producto</h2>

<fieldset>
    <legend>Formulario de Producto</legend>

    @using (Html.BeginForm("Productos", "home", FormMethod.Post))
    {
        @Html.ValidationSummary("", new { @class = "text-danger" })


        @Html.LabelFor(m => m.cod_prod, null, htmlAttributes: new { @class = "label label-danger" })
        @Html.TextBoxFor(m => m.cod_prod, null, htmlAttributes: new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.descripcion, null, htmlAttributes: new { @class = "label label-danger" })
        @Html.TextBoxFor(m => m.descripcion, null, htmlAttributes: new { @class = "form-control" })
        <br />

        @Html.LabelFor(m => m.existencia, null, htmlAttributes: new { @class = "label label-danger" })
        @Html.TextBoxFor(m => m.existencia, null, htmlAttributes: new { @class = "form-control" })
        <br />

        @Html.LabelFor(m => m.garantia, null, htmlAttributes: new { @class = "label label-danger" })
        @Html.TextBoxFor(m => m.garantia, null, htmlAttributes: new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.nombre, null, htmlAttributes: new { @class = "label label-danger" })
        @Html.TextBoxFor(m => m.nombre, null, htmlAttributes: new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.Precio_unit, null, htmlAttributes: new { @class = "label label-danger" })
        @Html.TextBoxFor(m => m.Precio_unit, null, htmlAttributes: new { @class = "form-control" })
        <br />
        <br />
        <input type="submit" value="Enviar" class="btn btn-success" />

    }
</fieldset>




