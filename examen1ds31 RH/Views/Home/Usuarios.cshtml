
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";

    @model examen1ds31_RH.Models.Usuarios

    if (ViewBag.ins == "true")
    {
        <script>>alert('Usuario:'+ @ViewBag.user + 'guardado!!')</script>
    }

}

<h2>Usuarios</h2>

<fieldset>
    <legend>Formulario de soporte</legend>

    @using (Html.BeginForm("Usuarios", "home", FormMethod.Post))
    {
        @Html.ValidationSummary("", new { @class = "text-danger" })


        @Html.LabelFor(m => m.cod_user, null, htmlAttributes: new { @class = "label label-danger" })
        @Html.TextBoxFor(m => m.cod_user, null, htmlAttributes: new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.nombre_usuario, null, htmlAttributes: new { @class = "label label-danger" })
        @Html.TextBoxFor(m => m.nombre_usuario, null, htmlAttributes: new { @class = "form-control" })
        <br />

        @Html.LabelFor(m => m.contra, null, htmlAttributes: new { @class = "label label-danger" })
        @Html.TextBoxFor(m => m.contra, null, htmlAttributes: new { @class = "form-control" })
        <br />

        @Html.LabelFor(m => m.nivel_usuario, null, htmlAttributes: new { @class = "label label-danger" })
        @Html.TextBoxFor(m => m.nivel_usuario, null, htmlAttributes: new { @class = "form-control" })
        <br />
        <br />
        <input type="submit" value="Enviar" class="btn btn-success" />

    }
</fieldset>


